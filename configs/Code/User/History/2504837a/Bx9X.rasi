/* Main Config - emoji */

@import "~/.config/rofi/config.rasi" 

window {
    width: 20%;
    location:                   northeast;
    anchor:                     northeast;
    y-offset: 50px;
    x-offset: -10px;
}

mainbox {
	padding:					 0px;
    enabled:                     true;
    orientation:                 vertical;
    children:                    [ "inputbar", "listbox" ];
    background-color:            transparent;
}

element-text {
    font: "DejaVu Sans Mono 8";
}

button {
    width:                       0%;
    padding:                     0px;
    border-radius:               0px;
    background-color:            @text-selected;
    text-color:                  @text-color;
    cursor:                      pointer;
}
inputbar {
    enabled:                     true;
    padding:                     0px;
    margin:                      10px;
    background-color:            transparent;
    border-radius:               15px;
    orientation:                 horizontal;
    children:                    ["entry", "dummy", "mode-switcher" ];
}

/* ---- Entry ---- */
entry {
  width: 100%;
  placeholder: "🔐 Manual Connection";
  font: "DejaVu Sans Mono 8";
}

/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 1;
}