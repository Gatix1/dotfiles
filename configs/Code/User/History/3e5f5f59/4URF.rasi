/* Main Config - emoji */

@import "~/.config/rofi/config.rasi" 

window {
    width: 20%;
}

mainbox {
	padding:					 0px;
    enabled:                     true;
    orientation:                 vertical;
    children:                    [ "inputbar", "listbox" ];
    background-color:            transparent;
}

element-text {
    font: "DejaVu Sans Mono 8";
}

button {
    width:                       5%;
    padding:                     0px;
    border-radius:               0px;
    background-color:            @text-selected;
    text-color:                  @text-color;
    cursor:                      pointer;
}
inputbar {
    enabled:                     true;
    padding:                     0px;
    margin:                      0px;
    background-color:            transparent;
    border-radius:               15px;
    orientation:                 horizontal;
    children:                    ["entry", "dummy", "mode-switcher" ];
}

/* ---- Entry ---- */
entry {
  width: 100%;
  placeholder: "ðŸ“¶ WiFi Connect";
  font: "DejaVu Sans Mono 8";
}

/* ---- Listview ---- */
listview {
  columns: 1;
  lines: 8;
}